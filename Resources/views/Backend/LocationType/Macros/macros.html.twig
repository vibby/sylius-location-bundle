{% macro list(location_categories) %}

    {% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
    {% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

    {% if location_categories|length > 0 %}
        <table class="sylius-location_categories-table table table-bordered">
            <thead>
            <tr>
                <th class="id">{{ sylius_resource_sort('id', 'webburza.sylius.location_type.label.id'|trans) }}</th>
                <th class="name">{{ sylius_resource_sort('translation.name', 'webburza.sylius.location_type.label.name'|trans) }}</th>
                <th class="updated-at">{{ sylius_resource_sort('updatedAt', 'webburza.sylius.location.label.updated_at'|trans) }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for location_type in location_categories %}
                <tr id="{{ location_type.id }}">
                    <td>{{ location_type.id }}</td>
                    <td>
                        <a href="{{ path('webburza_location_location_type_show', {'id': location_type.id}) }}">
                            <strong>{{ location_type.name }}</strong>
                        </a>
                    </td>
                    <td>{{ location_type.updatedAt | date }}</td>
                    <td class="center-text">
                        {{ buttons.edit(path('webburza_location_location_type_update', {'id': location_type.id})) }}
                        {{ buttons.delete(path('webburza_location_location_type_delete', {'id': location_type.id})) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ alerts.info('webburza.sylius.location_type.no_results'|trans) }}
    {% endif %}

{% endmacro %}
