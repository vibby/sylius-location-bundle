{% macro list(macros) %}

    {% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
    {% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

    {% if macros|length > 0 %}
        <table class="sylius-macros-table table table-bordered">
            <thead>
            <tr>
                <th class="id">{{ sylius_resource_sort('id', 'webburza.sylius.location.label.id'|trans) }}</th>
                <th class="name">{{ sylius_resource_sort('translation.name', 'webburza.sylius.location.label.name'|trans) }}</th>
                <th class="internal-name">{{ sylius_resource_sort('internal_name', 'webburza.sylius.location.label.internal_name'|trans) }}</th>
                <th class="location-type">{{ sylius_resource_sort('locationType.name', 'webburza.sylius.location.label.type'|trans) }}</th>
                <th class="published">{{ sylius_resource_sort('published', 'webburza.sylius.location.label.published'|trans) }}</th>
                <th class="updated-at">{{ sylius_resource_sort('updatedAt', 'webburza.sylius.location.label.updated_at'|trans) }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for macro in macros %}
                <tr id="{{ macro.id }}">
                    <td>{{ macro.id }}</td>
                    <td>
                        <a href="{{ path('webburza_location_location_show', {'id': macro.id}) }}">
                            <strong>{{ macro.name }}</strong>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('webburza_location_location_show', {'id': macro.id}) }}">
                            <strong>{{ macro.internalName }}</strong>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('webburza_location_location_type_show', {'id': macro.locationType.id}) }}">
                            <strong>{{ macro.locationType.name }}</strong>
                        </a>
                    </td>
                    <td>
                        {% if macro.published %}
                            <span class="label label-success">Yes</span>
                        {% else %}
                            <span class="label label-default">No</span>
                        {% endif %}
                    </td>
                    <td>{{ macro.updatedAt | date }}</td>
                    <td class="center-text">
                        {{ buttons.edit(path('webburza_location_location_update', {'id': macro.id})) }}
                        {{ buttons.delete(path('webburza_location_location_delete', {'id': macro.id})) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ alerts.info('webburza.sylius.location.no_results'|trans) }}
    {% endif %}

{% endmacro %}
